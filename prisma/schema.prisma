// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mahasiswa {
  id   Int    @id @default(autoincrement())
  name String

  Mahasiswa_MataKuliah Mahasiswa_MataKuliah[]
}

model Dosen {
  id               Int                @id @default(autoincrement())
  NIP              String
  username         String
  password         String
  Dosen_MataKuliah Dosen_MataKuliah[]
}

model MataKuliah {
  id                   Int                    @id @default(autoincrement())
  name                 String
  Mahasiswa_MataKuliah Mahasiswa_MataKuliah[]
  Dosen_MataKuliah     Dosen_MataKuliah[]
}

model Mahasiswa_MataKuliah {
  mahasiswaId  Int
  Mahasiswa    Mahasiswa  @relation(fields: [mahasiswaId], references: [id])
  mataKuliahId Int
  MataKuliah   MataKuliah @relation(fields: [mataKuliahId], references: [id])

  @@id(fields: [mahasiswaId, mataKuliahId])
}

model Dosen_MataKuliah {
  dosenId      Int
  Dosen        Dosen      @relation(fields: [dosenId], references: [id])
  mataKuliahId Int
  MataKuliah   MataKuliah @relation(fields: [mataKuliahId], references: [id])

  @@id(fields: [dosenId, mataKuliahId])
}
